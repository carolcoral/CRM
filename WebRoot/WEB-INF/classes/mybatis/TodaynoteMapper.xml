<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hjcrm.entity">

	<!-- 查询今日目标 -->
	<select id="queryTodaynote" parameterType="java.util.Map" resultType="com.hjcrm.system.entity.Todaynote">
		 select * 
		 	from hj_todaynote t
		    where 1=1 and t.dr = 0
			 <if test="userid != null">
			 	and t.userid = #{userid}
			 </if>
			 and to_days(t.create_time) = to_days(now())
	</select>
	
</mapper> 
